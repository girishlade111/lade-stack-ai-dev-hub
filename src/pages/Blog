                        </h3>
                      );
                    } else if (paragraph.startsWith('#### ')) {
                      return (
                        <h4 key={index} className="text-base sm:text-lg font-semibold text-foreground mt-4 mb-2">
                          {paragraph.replace('#### ', '')}
                        </h4>
                      );
                    } else {
                      return (
                        <p key={index} className="text-base sm:text-lg text-muted-foreground leading-relaxed">
                          {paragraph}
                        </p>
                      );
                    }
                  })}
